{
  "name": "claude-code-dashboard",
  "version": "1.0.0",
  "description": "Web dashboard for managing Claude Code CLI sessions",
  "main": "server/app.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/app.js",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "NODE_ENV=production node server/app.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "lint": "eslint server/**/*.js || true",
    "lint:fix": "eslint --fix server/**/*.js client/src/**/*.{js,jsx,ts,tsx}",
    "verify": "npm run lint && npm run build && npm run test:smoke",
    "test:smoke": "node scripts/smoke-test.js",
    "prepare": "husky install || true",
    "pm2:start": "pm2 start server/app.js --name claude-dashboard",
    "pm2:stop": "pm2 stop claude-dashboard",
    "pm2:restart": "pm2 restart claude-dashboard",
    "pm2:logs": "pm2 logs claude-dashboard"
  },
  "keywords": [
    "claude",
    "cli",
    "dashboard",
    "tmux",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "chokidar": "^3.5.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-pty": "^1.0.0",
    "rate-limiter-flexible": "^4.0.1",
    "socket.io": "^4.7.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.11",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
